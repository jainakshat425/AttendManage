<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/main_container"
    android:paddingEnd="8dp">

    <RelativeLayout
        android:id="@+id/edit_profile"
        style="@style/main_card_container">

        <ImageView
            android:id="@+id/iv_edit_profile"
            style="@style/main_image_view"
            app:srcCompat="@drawable/ic_edit" />

        <TextView
            style="@style/main_textview"
            android:layout_below="@id/iv_edit_profile"
            android:text="Edit Profile" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_password"
        style="@style/main_card_container">

        <ImageView
            android:id="@+id/iv_keys"
            style="@style/main_image_view"
            app:srcCompat="@drawable/ic_change_password" />

        <TextView
            style="@style/main_textview"
            android:layout_below="@id/iv_keys"
            android:text="Change Password"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logout"
        style="@style/main_card_container">

        <ImageView
            android:id="@+id/iv_logout"
            style="@style/main_image_view"
            app:srcCompat="@drawable/ic_logout" />

        <TextView
            style="@style/main_textview"
            android:layout_below="@id/iv_logout"
            android:text="Logout" />

    </RelativeLayout>
</LinearLayout>
