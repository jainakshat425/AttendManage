<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassSelectActivity"
    android:orientation="vertical">

    <LinearLayout
        style="@style/SpinnerLayoutContainer">

        <TextView
            style="@style/SpinnerTextStyle"
            android:text="Semester" />

        <Spinner
            android:id="@+id/class_select_semester_spin"
            style="@style/SpinnerStyle" />
    </LinearLayout>

    <LinearLayout
        style="@style/SpinnerLayoutContainer">

        <TextView
            style="@style/SpinnerTextStyle"
            android:text="Branch" />

        <Spinner
            android:id="@+id/class_select_branch_spin"
            style="@style/SpinnerStyle" />
    </LinearLayout>

    <LinearLayout
        style="@style/SpinnerLayoutContainer">

        <TextView
            style="@style/SpinnerTextStyle"
            android:text="Section" />

        <Spinner
            android:id="@+id/class_select_section_spin"
            style="@style/SpinnerStyle" />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_show_students"
        style="@style/fab_right_save"
        app:srcCompat="@drawable/ic_next_24px" />
</LinearLayout>